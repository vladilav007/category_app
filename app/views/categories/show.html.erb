<p style="color: green"><%= notice %></p>
  <h2><%= @category.title %></h2>
  <%= link_to "Edit this category", edit_category_path(@category), class: "btn btn-secondary" %><br><br>
  <%= button_to "Destroy this category", @category, method: :delete, class: "btn btn-outline-danger" %><br>
  
  <%= link_to "Add Expense to Category", new_expense_path(category_id: @category.id), remote: true, class: "btn btn-primary" %><br>
   <strong>Total expenses:</strong>
   <p><%= @category.totalprice %></p>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
      <div class="container-fluid">

        <%= search_form_for @search, url: search_expenses_path, class: "form-inline col-md-8 col-md-offset-1" do |f| %>
          <div class="input-daterange">
            <div class="col-md-4">
              <%= f.search_field :created_at_gteq,  class: "form-control", placeholder: 'Start date yyyy-mm-dd' %>
            </div>
            <div class="col-md-4 col-md-offset-1">
              <%= f.search_field :created_at_lteq,  class: "form-control", placeholder: 'End date yyyy-mm-dd' %>
            </div>
          </div>

            <div class="col-md-2 col-md-offset-1 form-actions">
              <%= f.submit "Search", class: "btn btn-success" %>
            </div>
   
          <% end %>
        </div>
        </div>

      <div class="panel-body">
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th>Title</th>
            <th>Price</th>
            <th>created_at</th>
            <th colspan="1"></th>
          </tr>
        </thead>

        <tbody>
          <% @category.expenses.each do |expense| %>
            <tr>
              <td>
                <%= expense.title %>
              </td>
              <td>
                <%= expense.price %>
              </td>
              <td>
                <%= expense.created_at %>
              </td>
              <td><%= link_to 'Show', expense %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>

      <div class="panel-footer">
        
      </div>
    </div>
  </div> 
</div>
